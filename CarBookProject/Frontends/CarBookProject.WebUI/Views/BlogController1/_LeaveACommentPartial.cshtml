<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@*Yorum Yapma*@
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Bırak </h3>
    <form asp-action="LeaveAComment" asp-controller="BlogController1" method="post" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Adınız Soyadınız *</label>
            <input type="text" name="NameSurname"  class="form-control" placeholder="Adınızı Ve Soyadınızı Giriniz..." >
            <input type="hidden" name="BlogId" value="@TempData["bId"]" >
        </div>
        <div class="form-group">
            <label for="message" >Yorumunuz</label>
            <textarea name="Content" id="message" cols="30" rows="10" class="form-control" placeholder="Yorumunuzu Giriniz..."></textarea>
        </div>
        <div class="form-group">
            <button id="btn1" class="btn py-3 px-4 btn-primary">Gönder</button>
        </div>

    </form>
</div>
<script>
    $("#btn1").click(function () {
        Swal.fire("SweetAlert2 çalışıyor!");
    });
</script>