@model List<GetLast3BlogWithAuthorShowcaseDTO>
<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Bloglar</span>
                <h2>Son Eklenen Bloglar</h2>
            </div>
        </div>
        <div class="row d-flex">
            @foreach(var x in Model){
            <div class="col-md-4 d-flex ftco-animate">
                <div class="blog-entry justify-content-end">
                    <a href="blog-single.html" class="block-20" style="background-image: url('@x.CoverImageUrl');">
                    </a>
                    <div class="text pt-4">
                        <div class="meta mb-3">
                            <div><a href="#">@Convert.ToDateTime(x.CreateDate).ToString("dd,MM,yyyy")</a></div>
                            <div><a href="#">@x.AuthorName</a></div>
                            <div><a href="#" class="meta-chat"><span class="icon-chat"></span>2</a></div>
                        </div>
                        <h3 class="heading mt-2"><a href="#">@x.Title</a></h3>
                        <p><a href="/Blog/BlogDetails/@x.BlogId" class="btn btn-primary">Devamını Oku</a></p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>