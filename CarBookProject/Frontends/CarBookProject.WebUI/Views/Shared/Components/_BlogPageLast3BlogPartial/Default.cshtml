@model List<GetLast3BlogWithAuthorShowcaseDTO>
@*Son 3 blog*@
<div class="sidebar-box ftco-animate">
    <h3>Son Eklenen 3 Blog</h3>
    @foreach(var x in Model)
    {
    <div class="block-21 mb-4 d-flex">
            <a href="/BlogController1/BlogDetails/@x.BlogId" class="blog-img mr-4" style="background-image: url(@x.CoverImageUrl);width:150px"></a>
        <div class="text">
                <h3 class="heading"><a href="/BlogController1/BlogDetails/@x.BlogId">@x.Title</a></h3>
            <div class="meta">
                <div><a href="#"><span class="icon-calendar"></span>@Convert.ToDateTime(x.CreateDate).ToString("dd/MMM/yyyy")</a></div>
                <div><a href="#"><span class="icon-person"></span>@x.AuthorName</a></div>
                <div><a href="#"><span class="icon-chat"></span>@Model.Count</a></div>
            </div>
        </div>
    </div>
    }
</div>