@model List<GetContactListAdminDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-weight:bold">Eleştiri Mesajları:</h4>
            <p class="card-subtitle mb-4">
                <span style="font-size:15px"> Sitenin İşleyişi İle İlgili Eleştiri Mesajları Aşağıda Listelenmiştir.</span>
            </p>
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead style="background-color:crimson;color:white">
                        <tr>
                            <th>#</th>
                            <th>Gönderen Adı Soyadı:</th>
                            <th>Gönderen Mail Adresi:</th>
                            <th>Gönderilme Tarihi:</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@x.NameSurname</td>
                                <td>@x.Mail</td>
                                <td>@Convert.ToDateTime(x.SendDate).ToString("dd/MM/yyyy")</td>
                                <td><a href="/Admin/AdminContact/ContactDetails/@x.ContactId" class="btn btn-info">Detaylar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

