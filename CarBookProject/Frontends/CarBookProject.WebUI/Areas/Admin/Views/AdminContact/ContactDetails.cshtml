@model GetContactAdminDTO
@{
    ViewData["Title"] = "ContactDetails";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-weight:bold">İlgili Mesajın Detaylarına Aşağıdan Ulaşabilirsiniz. Gönderilme Tarihi: <span style="color:blue">@Convert.ToDateTime(Model.SendDate).ToString("dd/MM/yyyy")</span></h4>
            <form method="post">
                <div class="form-group">
                    <label style="color:deeppink" for="simpleinput">Gönderen Adı Soyadı:</label>
                    <input type="text" asp-for=NameSurname class="form-control" disabled>
                </div>
                <div class="form-group">
                    <label style="color:deeppink" for="simpleinput">Gönderen Mail:</label>
                    <input type="text" asp-for=Mail class="form-control" disabled>
                </div>
                <div class="form-group">
                    <label style="color:deeppink" for="simpleinput">Konu:</label>
                    <input type="text" asp-for=Subject class="form-control" disabled>
                </div>
                <div class="form-group">
                    <label style="color:deeppink" for="simpleinput">Gönderen Mesajı:</label>
                    <textarea asp-for=Message rows="2" class="form-control" disabled></textarea>
                </div>
            </form>
        </div>
    </div>
</div>
