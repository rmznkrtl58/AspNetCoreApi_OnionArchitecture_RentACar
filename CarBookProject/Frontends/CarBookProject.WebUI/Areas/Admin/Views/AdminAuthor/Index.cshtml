@model List<GetAuthorAdminDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-weight:bold">Yazar Listesi</h4>
            <p class="card-subtitle mb-4">
                <span style="font-size:15px"> Sitemizdeki Blogların Yazarları Aşağıda Listelenmiştir.</span>
            </p>
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead style="background-color:purple;color:white">
                        <tr>
                            <th>#</th>
                            <th>Resim:</th>
                            <th>Adı Soyadı:</th>
                            <th>Detaylar</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td><img src="@x.ImageUrl" style="width:50px;height:50px" /></td>
                                <td>@x.NameSurname</td>
                                <td><a href="/Admin/AdminAuthor/UpdateAuthor/@x.AuthorId" class="btn btn-warning">Detaylar</a></td>
                                <td><a href="/Admin/AdminAuthor/DeleteAuthor/@x.AuthorId" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="/Admin/AdminAuthor/CreateAuthor" class="btn btn-success">Yeni Yazar</a>
    </div>
</div>

