@model List<GetServiceAdminDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}
<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-weight:bold">Hizmetlerimizin Listesi</h4>
            <p class="card-subtitle mb-4">
                <span style="font-size:15px"> Firmamızın siz değerli müşterilerine vermiş olduğu hizmetler aşağıda listelenmiştir.</span>
            </p>
            <div class="table-responsive">
                <table class="table mb-0">
                    <thead style="background-color:lightsalmon;color:black">
                        <tr>
                            <th>#</th>
                            <th>Başlık:</th>
                            <th>Açıklama:</th>
                            <th>Detaylar</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            count++;
                            <tr>
                                <th scope="row">@count</th>
                                <td>@x.Title</td>
                                <td>@x.Description</td>
                                <td><a href="/Admin/AdminServices/UpdateService/@x.ServiceId" class="btn btn-warning">Detaylar</a></td>
                                <td><a href="/Admin/AdminServices/DeleteService/@x.ServiceId" class="btn btn-danger">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a href="/Admin/AdminServices/CreateService" class="btn btn-success">Yeni Hizmet</a>
    </div>
</div>
