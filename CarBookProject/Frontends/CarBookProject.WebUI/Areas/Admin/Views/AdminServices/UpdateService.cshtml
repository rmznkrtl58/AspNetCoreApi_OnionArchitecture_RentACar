@model UpdateServiceAdminDTO
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-weight:bold">Hizmet Güncelleme Paneli</h4>
            <p class="card-subtitle mb-4">(Siz müşterilerimize iyi hizmet vermek için en iyi hizmetlerimize göre Güncellemeye çalışıyoruz.)</p>
            <form method="post">
                @Html.HiddenFor(x=>x.ServiceId)
                <div class="form-group">
                    <label style="color:maroon" for="simpleinput">Başlık:</label>
                    <input type="text" asp-for=Title class="form-control" placeholder="Başlık Giriniz...">
                </div>
                <div class="form-group">
                    <label style="color:maroon" for="simpleinput">İcon Url:</label>
                    <input type="text" asp-for=İconUrl class="form-control" placeholder="İcon Url Giriniz...">
                </div>
                <div class="form-group">
                    <label style="color:maroon" for="simpleinput">Açıklama:</label>
                    <textarea asp-for="Description" class="form-control" rows="2" placeholder="Açıklama Giriniz..."></textarea>
                </div>
                <button class="btn btn-warning" style="margin-top:4px">Güncelle</button>
            </form>
        </div>
    </div>
</div>

