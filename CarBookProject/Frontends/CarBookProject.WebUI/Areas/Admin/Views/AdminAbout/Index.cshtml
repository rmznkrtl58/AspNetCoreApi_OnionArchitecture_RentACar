@model UpdateAboutAdminDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title" style="font-weight:bold">Hakkımda Alanı Güncelleme Sayfası</h4>
            <p class="card-subtitle mb-4">(Sitenin Ana Sayfasındaki Hakkımda Bölümünü  Güncellemek İçin Aşağıdaki İşlemleri Yapınız.)</p>
            <form method="post">
                @Html.HiddenFor(x => x.AboutId)
                <div class="form-group">
                    <label style="color:forestgreen" for="simpleinput">Başlık:</label>
                    <input type="text" asp-for=Title class="form-control" placeholder="Marka İsmi Giriniz...">
                </div>
                <div class="form-group">
                    <label style="color:forestgreen" for="simpleinput">Resim Url:</label>
                    <input type="text" asp-for=ImageUrl class="form-control" placeholder="Resim Url Giriniz...">
                </div>
                <div class="form-group">
                    <label style="color:forestgreen" for="simpleinput">Açıklama:</label>
                    <textarea asp-for=Description class="form-control" rows="4" placeholder="Açıklama Giriniz..."></textarea>
                </div>
                <button class="btn btn-info" style="margin-top:4px">Güncelle</button>
            </form>
        </div>
    </div>
</div>


